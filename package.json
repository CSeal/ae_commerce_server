{
  "name": "ae-commerce-server",
  "version": "1.0.0",
  "description": "aeCommerce agent",
  "main": "./src/index.js",
  "author": "Oleg Kopachovets",
  "scripts": {
    "watch": "nodemon -e ts -w ./src -x npm run watch:serve",
    "watch:serve": "ts-node --inspect src/index.ts",
    "dev": "nodemon --exec 'ts-node --cache-directory .tscache' ./src/index.ts",
    "start": "ts-node --fast ./src/index.ts"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "bracketSpacing": false
  },
  "globalDependencies": {
    "typescript": "2.2.1",
    "nodemon": "1.11.0",
    "ts-node": "3.0.2"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.3",
    "apicache": "^1.1.0",
    "body-parser": "^1.18.2",
    "cheerio": "^1.0.0-rc.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "hammerjs": "^2.0.8",
    "helmet": "^3.9.0",
    "morgan": "^1.9.0",
    "needle": "^2.0.1",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/compression": "^0.0.34",
    "@types/express": "^4.0.38",
    "@types/helmet": "^0.0.37",
    "@types/node": "^8.0.47",
    "node-dev": "^3.1.3",
    "nodemon": "^1.12.1",
    "ts-node-dev": "^1.0.0-pre.5",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1"
  }
}
